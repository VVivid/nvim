{
  "coc.preferences.formatOnSaveFiletypes": ["css", "markdown","html","typescript","javascript","cpp"]
,
"languageserver": {
	"ccls": {
	"command": "ccls",
	"filetypes": ["c", "cpp", "c++", "objc", "objcpp"],
	"rootPatterns": [".ccls", "compile_commands.json", ".git", ".hg/"],
	"initializationOptions": {
		"cache": {
			"directory": "/tmp/ccls"
		}
	}
	}
}
}

